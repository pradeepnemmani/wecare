<h1><%= @titile %></h1>
<%= form_for(@event) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%=f.label :name%><br/>
		<%=f.text_field :name %>
	</div>
	<div class="field">
		<%=f.label :on_date%><br/>
		<%=f.text_field :on_date %>
	</div>
	<div class="field">
		<%=f.label :end_date%><br/>
		<%=f.text_field :end_date %>
	</div>
	<div class="field">
		<%=f.label :description %><br/>
		<%=f.text_area :description %>
	</div>
	<div class="field">
	<%= f.submit "Submit"%>			
	</div>
<% end %>