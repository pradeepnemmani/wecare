<% if @comments.any? %>
	
	<div class="comman_scroll" >
	<table >
		
		<% @comments.each do |comment| %>
		<tr>
			<td class="gravatar">
				<%= link_to gravatar_for(User.find(comment.user_id)), User.find(comment.user_id), :options => {:size => 35}%>
				<%= link_to User.find(comment.user_id).name, User.find(comment.user_id).name %>
				
			</td>
			<td class="micropost">
				<span class ="content">
					<%= comment.comment%>
				</span><br/>
				<span class="timestamp">
					Posted <%= time_ago_in_words(comment.created_at)%> ago.
				</span>
			</td>
			
		</tr>
		<%#= will_paginate%>
		<% end %>
	</table>
	</div>

<% end %>
<%= render 'shared/comment_form' %>


